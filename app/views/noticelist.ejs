<%- contentFor('script') %>
<script>
    var totalCount = <%= totalCount %>; 
    var page = <%= page %>;
    var rowCount = <%= rowCount %>;   
    
    $(document).ready(function() {
        if (totalCount <= rowCount) {
            $('#notice-page').hide();
        } else {
            createPagination('notice-page', totalCount, rowCount, page, 5, `/notice/list?`);
        }
        
        // collapse open
        $('.collapse').collapse('show');
	    
        // collapse 한개씩만 열도록 하기
         $(".collapsed").click(function () {
            $(".collapse").collapse('hide');
        }); 

        
    });
    
</script>

