                                            <div id="content-text">내용 : <br /> <%- item.CONTENT %></div>
                                            <p>작성일 : <%= moment(item.CREATED).format('YYYY-MM-DD hh:mm:ss') %></p>
                                        </div><!-- card-body -->
                                    </div><!-- .collapse -->
                                </div><!-- card -->
                            </div><!-- accordion -->

